<h3>Categorias</h3>
<hr/>
    <%= render 'formbusca' %>
<hr/>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td><%= categoria.descricao %></td>
        <td>
          <%= link_to 'Mostrar', categoria, class: 'btn btn-default' %>
          <%= link_to 'Editar', edit_categoria_path(categoria), class: 'btn btn-default' %>
          <%= link_to 'Deletar', categoria, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

