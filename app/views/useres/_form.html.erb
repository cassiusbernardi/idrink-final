<%= form_for(@user) do |f| %>
  <div class="form-inputs">
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email, :id => "email" %>
    </div>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :endereco %><br>
      <%= f.text_field :endereco %>
    </div>
    <div class="field">
      <%= f.label :telefone %><br>
      <%= f.text_field :telefone %>
    </div>
    <div class="field">
      <%= f.label :cpf %><br>
      <%= f.text_field :cpf %>
    </div>
    <div class="field">
      <%= f.label :tipo %><br>
      <%= f.radio_button :tipo, 'Administrador', :checked => true %> Administrador
      <%= f.radio_button :tipo, 'Cliente' %> Cliente
    </div>
    <div class="field">
      <%= f.label :nascimento %><br>
      <%= f.text_field :nascimento ,  class: "datepicker" %>
    </div>





    <div class="actions">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
    <%= link_to ' Voltar', useres_path ,  class: "btn btn-default " %>
    </div>
  </div>
<% end %>

<script>

$(document).ready(function(){
  $('.datepicker').datepicker({format: 'dd-mm-yyyy'});
  $('#cpf').inputmask("999.999.999-99");  
});
</script>